                    <RowDefinition Height="100"/>
                    <RowDefinition Height="550"/>
                    <RowDefinition Height="100"/>
                    <RowDefinition Height="550"/>
                    <RowDefinition Height="320"/>
                    <RowDefinition Height="100"/>
                    <RowDefinition Height="550"/>
                    <RowDefinition Height="500"/>
                </Grid.RowDefinitions>

                <!-- Menu Grid -->

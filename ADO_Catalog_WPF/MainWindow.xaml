                        <ListView Grid.Column="2" Style="{StaticResource ListCategory}" x:Name="actionCameras"/>
                        <ListView Grid.Column="3" Style="{StaticResource ListCategory}" x:Name="portableAcoustic"/>
                        <ListView Grid.Column="4" Style="{StaticResource ListCategory}" x:Name="headphones"/>
                    </Grid>
                    <Grid x:Name="Tv" Visibility="Hidden" Background="White" Margin="100">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <ListView Grid.Column="0" Style="{StaticResource ListCategory}" x:Name="tvSamsung"/>
                        <ListView Grid.Column="1" Style="{StaticResource ListCategory}" x:Name="tvLg"/>

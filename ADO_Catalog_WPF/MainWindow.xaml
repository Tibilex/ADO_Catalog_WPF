                        <ListView Grid.Column="4" Style="{StaticResource ListCategory}" x:Name="tvProjectors"/>
                        <ListView Grid.Column="5" Style="{StaticResource ListCategory}" x:Name="tvSoundbars"/>
                    </Grid>
                    <Grid x:Name="Gadgets" Visibility="Hidden" Background="White" Margin="100 0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <ListView Grid.Column="0" Style="{StaticResource ListCategory}" x:Name="quadcopters"/>
                        <ListView Grid.Column="1" Style="{StaticResource ListCategory}" x:Name="electricTransport"/>
                        <ListView Grid.Column="2" Style="{StaticResource ListCategory}" x:Name="smartHouse"/>
                        <ListView Grid.Column="3" Style="{StaticResource ListCategory}" x:Name="cables"/>
                        <ListView Grid.Column="4" Style="{StaticResource ListCategory}" x:Name="chsrgers"/>
                    </Grid>
                    <Grid x:Name="Appliances" Visibility="Hidden" Background="White" Margin="100 0">

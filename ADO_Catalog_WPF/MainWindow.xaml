                        </Grid.ColumnDefinitions>
                        <ListView Grid.Column="0" Style="{StaticResource ListCategory}" x:Name="vacuumCleaners"/>
                        <ListView Grid.Column="1" Style="{StaticResource ListCategory}" x:Name="airConditioners"/>

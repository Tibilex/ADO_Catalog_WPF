                        </Grid>
                    </Button>
                    <Button Grid.Column="1" Style="{StaticResource Category}" x:Name="buttonMac" >
                        <Grid>
                            <TextBlock Style="{StaticResource Categorytextblock}" Text="Macbook Pro M1"/>
                            <Image Source="Resources/Macbook Pro M1.png"/>
                        </Grid>
                    </Button>
                    <Button Grid.Column="2" Style="{StaticResource Category}" x:Name="buttonUsed">

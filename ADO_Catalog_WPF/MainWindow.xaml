                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <ListView Grid.Column="0" Style="{StaticResource ListCategory}" x:Name="samsungS"/>
                        <ListView Grid.Column="1" Style="{StaticResource ListCategory}" x:Name="samsungZ"/>
                        <ListView Grid.Column="2" Style="{StaticResource ListCategory}" x:Name="smartphones"/>

                        <ListView Grid.Column="3" Style="{StaticResource ListCategory}" x:Name="notebooks"/>
                        <ListView Grid.Column="4" Style="{StaticResource ListCategory}" x:Name="tablets"/>
                        <ListView Grid.Column="5" Style="{StaticResource ListCategory}" x:Name="accessories"/>
                    </Grid>
                    <Grid x:Name="PhotoAudioPS5" Visibility="Hidden"  Background="White" Margin="100 0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <ListView Grid.Column="0" Style="{StaticResource ListCategory}" x:Name="cameras"/>
